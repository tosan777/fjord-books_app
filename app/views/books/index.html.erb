<p id="notice"><%= notice %></p>

<h1><%= t('books.index.title') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('books.defaults.title') %></th>
      <th><%= t('books.defaults.memo') %></th>
      <th><%= t('books.defaults.author') %></th>
      <th><%= t('books.defaults.picture') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.author %></td>
        <td><%= book.picture %></td>
        <td><%= link_to t('books.defaults.show'), book %></td>
        <td><%= link_to t('books.defaults.edit'), edit_book_path(book) %></td>
        <td><%= link_to t('books.defaults.destroy'), book, method: :delete, data: { confirm: I18n.t("notice.data") } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('books.defaults.new_memo'), new_book_path %>
