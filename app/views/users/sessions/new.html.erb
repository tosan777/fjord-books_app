<h2><%= t('users.defaults.login') %></h2>

<%= form_with model: @user, url: users_login_path, local: true do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :encrypted_password %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit t('users.defaults.login') %>
  </div>
<% end %>

<%= render "users/shared/links" %>
